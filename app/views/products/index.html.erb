<p id="notice"><%= notice %></p>

<h1>Products</h1>
<div class="col-md-12">
  <div class="col-md-7" style="float: left;">
    <%= form_tag import_products_path, multipart: true, class: 'form-inline' do %>
      <div class="form-group col-md-2">
        <%= link_to "Export CSV", products_path(format: :csv), class: "btn btn-primary" %>  
      </div>
      <div class="form-group col-md-3">
        <%= file_field_tag :file, class: 'btn' %>
      </div>
      <div class="form-group col-md-2" style="float: left;">
        <%= submit_tag "Import CSV", class: 'btn btn-info' %>
      </div>
    <% end %>
  </div>
  <div class="col-md-5">
    <%= search_form_for @q do |f| %>
      <div class="form-group col-md-2">
        <%= f.label :name %>
        <%= f.text_field :name_cont, class: 'form-control'%>
      </div>
      <div class="form-group col-md-2">
        <%= f.label :price %>
        <%= f.text_field :price_eq, class: 'form-control' %>
      </div>
      <div class="form-group col-md-1">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
<br>
<div class="col-md-12">
<table class='table table-bordered table-condensed table-striped table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>

